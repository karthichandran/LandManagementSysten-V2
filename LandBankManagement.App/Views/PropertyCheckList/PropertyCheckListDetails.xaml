                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MaxWidth="300"/>                                   
                                    <ColumnDefinition MaxWidth="300"/>                                   
                                </Grid.ColumnDefinitions>
                                <controls:FormComboBox x:Name="PropertyCheckListCombo"  Header="Property" ItemsSource="{x:Bind PropertyCheckListOptions, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"   Visibility="{Binding ShowExistCheckListCombo,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                           SelectedValue="{x:Bind SelectedPropertyCheckList, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                           SelectedValuePath="Id" DisplayMemberPath="Description"  SelectionChanged="PropertyCheckListCombo_SelectionChanged" />
                                <controls:FormComboBox x:Name="PropertyCheckListCombo1"  Header="CheckList Master" ItemsSource="{x:Bind CheckListOptions, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  
                                           SelectedValue="{x:Bind SelectedNewCheckListItem, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  Visibility="{Binding ShowNewCheckListCombo,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                           SelectedValuePath="Id" DisplayMemberPath="Description"  HorizontalAlignment="Stretch"/>
                                    <Button x:Name="AddCheckListItem" Grid.Column="1" Width="100" Height="35" Margin="20 23 10 0"  Background="#03A9F4" Padding="5"  Click="AddCheckListItem_Click"  Visibility="{Binding ShowNewCheckListCombo,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" >
                                        <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Add" Foreground="#fff" Padding="0 0 10 0" FontWeight="Medium" FontSize="17"/>
                                        <FontIcon FontFamily="Segoe MDL2 Assets"  Glyph="&#xE710;" Foreground="#fff"  HorizontalAlignment="Left"/>
                                        </StackPanel>
                                            
                                    </Button>
                            </Grid>
                            
                        </StackPanel>
                    </StackPanel>                  
                    <StackPanel Grid.Row="1" Orientation="Vertical"  BorderBrush="#81D4FA" BorderThickness="1" Margin="0 20 10 20" MinHeight="200" >
                        <Grid Background="#81D4FA" Height="35">
                            <Grid.ColumnDefinitions >
                                <!--<ColumnDefinition  Width="50"/>-->
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="70"/>
                            </Grid.ColumnDefinitions>
                            <!--<TextBlock  Grid.Column="0" Text="All" Foreground="#fff" HorizontalAlignment="Left" Padding="10 5 0 0"  FontSize="15" FontWeight="Medium"/>-->                           
                            <TextBlock  Grid.Column="0" Text="Check List" Foreground="#fff" HorizontalAlignment="Left" Padding="10 5 0 0"  FontSize="15" FontWeight="Medium"/>
                            <TextBlock  Grid.Column="1" Text="Mandatory" Foreground="#fff" HorizontalAlignment="Left" Padding="0 5 0 0"  FontSize="15" FontWeight="Medium"/>
                            <TextBlock  Grid.Column="2" Text="Upload" Foreground="#fff" HorizontalAlignment="Left" Padding="0 5 0 0"  FontSize="15" FontWeight="Medium"/>
                            <!--<StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" >
                                <Button x:Name="uploadBtn"   Height="35" Margin="10 0 0 0"  Background="Transparent" Padding="5"  Command="{x:Bind EditPictureCommand}" HorizontalAlignment="Right">
                                    <FontIcon FontFamily="Segoe MDL2 Assets"  Glyph="&#xE710;" Foreground="#fff"  HorizontalAlignment="Left"/>
                                    <Button.Resources>
                                        <CornerRadius x:Key="ControlCornerRadius">15</CornerRadius>
                                    </Button.Resources>
                                </Button>
                                <Button x:Name="SaveDocBtn"   Height="35" Margin="10 0 0 0"  Background="Transparent" Padding="5"  Command="{x:Bind SavePictureCommand}" HorizontalAlignment="Right">
                                    <FontIcon FontFamily="Segoe MDL2 Assets"  Glyph="&#xE74E;" Foreground="#fff"  HorizontalAlignment="Left"/>
                                    <Button.Resources>
                                        <CornerRadius x:Key="ControlCornerRadius">15</CornerRadius>
                                    </Button.Resources>
                                </Button>
                            </StackPanel> -->

                        </Grid>
                        <StackPanel Margin="0 10 0 0" >
                            <ScrollViewer VerticalScrollMode="Enabled" MaxHeight="300" >
                                <muxc:ItemsRepeater x:Name="checkListListView" ItemsSource="{x:Bind CheckList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  Margin="0 0 0 0"  >
                                    <DataTemplate x:DataType="models:CheckListOfPropertyModel">
                                        <Grid  HorizontalAlignment="Stretch">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <Grid  Grid.Row="0" HorizontalAlignment="Stretch"  Background="#fbfafa" BorderBrush="#81D4FA" BorderThickness="0 0 0 1" Height="40" Padding="10 0 0 0">
                                                <Grid.ColumnDefinitions>
                                                    <!--<ColumnDefinition Width="25"/>-->
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="70"/>
                                                    <ColumnDefinition Width="70"/>
                                                </Grid.ColumnDefinitions>
                                                <!--<CheckBox Grid.Column="0"  IsChecked="{x:Bind IsSelected,Mode=TwoWay}"  />-->

                                                <TextBlock Text="{x:Bind Name,Mode=TwoWay}" Foreground="#265fab" FontWeight="Medium" Grid.Column="0"  FontSize="16"  Padding="5 5 5 0"  TextTrimming="CharacterEllipsis"  HorizontalAlignment="Left"></TextBlock>
                                                <CheckBox Grid.Column="1"  Padding="0 0 15 0"  IsChecked="{x:Bind Mandatory,Mode=TwoWay}"  />

                                                <Button x:Name="uploadBtn" Grid.Column="2" Tag="{x:Bind CheckListId}"  Height="35" Margin="10 0 10 0"  Background="Transparent" Padding="5"  Click="uploadBtn_Click" HorizontalAlignment="left">
                                                    <FontIcon FontFamily="Segoe MDL2 Assets"  Glyph="&#xE898;" Foreground="#265fab"  HorizontalAlignment="Left"/>
                                                    <Button.Resources>
                                                        <CornerRadius x:Key="ControlCornerRadius">15</CornerRadius>
                                                    </Button.Resources>
                                                </Button>
                                                <Button x:Name="CheckList_Delete" Tag="{x:Bind CheckListId}" Height="35" Grid.Column="4"  Background="Transparent" Padding="10 5 0 5"  Click="CheckList_Delete_Click" HorizontalAlignment="Left">
                                                    <FontIcon FontFamily="Segoe MDL2 Assets"  Glyph="&#xF78A;" Foreground="Red"  HorizontalAlignment="Left"/>
                                                    <Button.Resources>
                                                        <CornerRadius x:Key="ControlCornerRadius">15</CornerRadius>
                                                    </Button.Resources>
                                                </Button>
                                            </Grid>
                                            <Grid Grid.Row="1" Padding="0 0 0 0">
                                            <muxc:ItemsRepeater  ItemsSource="{x:Bind Documents,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  Margin="5 0 0 0"  Background="#fbfafa" >
                                                
                                                    <DataTemplate>
                                                    <Grid  HorizontalAlignment="Stretch" BorderBrush="#9c9a9a" BorderThickness="0 0 0 1" Padding="0 3 0 3" >
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="200"/>
                                                                <ColumnDefinition Width="120"/>
                                                                <ColumnDefinition Width="120"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="60"/>

                                                            </Grid.ColumnDefinitions>                                                       
                                                            <TextBlock Grid.Column="0" Text="{Binding FileName}"    FontSize="16"  Padding="25 10 5 0"  TextTrimming="CharacterEllipsis"   HorizontalAlignment="Left"></TextBlock>                                                       
                                                        <CalendarDatePicker Margin="5 0 5 0"  BorderBrush="#cfcbca"  Grid.Column="1"  BorderThickness="1" x:Name="dueCalender" HorizontalAlignment="Stretch" Date="{Binding DueDate,Mode=TwoWay,Converter={StaticResource DateTimeOffsetConverter},UpdateSourceTrigger=PropertyChanged}" DateFormat="{}{day.integer}/{month.integer}/{year.full}" Style="{StaticResource CalendarPickerStyle}"/>
                                                            <CalendarDatePicker Margin="5 0 5 0" BorderBrush="#cfcbca" Grid.Column="2"  BorderThickness="1" x:Name="completionCalender" HorizontalAlignment="Stretch" Date="{Binding ActualCompletionDate ,Mode=TwoWay,Converter={StaticResource DateTimeOffsetConverter},UpdateSourceTrigger=PropertyChanged}" DateFormat="{}{day.integer}/{month.integer}/{year.full}" Style="{StaticResource CalendarPickerStyle}"/>
                                                            <TextBox x:Name="remarks" Margin="5 0 5 0" Grid.Column="3" Height="30" Text="{Binding Remarks,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                                                            <Button x:Name="Doc_Delete" Tag="{Binding DeleteAt}" Height="35" Grid.Column="4"  Background="Transparent" Padding="10 5 0 5"  Click="Doc_Delete_Click" HorizontalAlignment="Left">
                                                                <FontIcon FontFamily="Segoe MDL2 Assets"  Glyph="&#xE74D;" Foreground="Red"  HorizontalAlignment="Left"/>
                                                                <Button.Resources>
                                                                    <CornerRadius x:Key="ControlCornerRadius">15</CornerRadius>
                                                                </Button.Resources>
                                                            </Button>
                                                        </Grid>

                                                    </DataTemplate>
                                                
                                            </muxc:ItemsRepeater>
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>                                  
                                </muxc:ItemsRepeater>
                               
                            </ScrollViewer>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Orientation="Vertical">
                        <TextBlock Text="Property Description" Margin="0 0 0 7" Foreground="{StaticResource TextControlTextBlockHeaderForeground}"/>
                        <TextBox Text="{x:Bind EditableItem.PropertyDescription, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="0 0 10 0" BorderBrush="#cfcbca" MinHeight="50"/>
                    </StackPanel>
                </Grid>
           </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid ColumnSpacing="6"  VerticalAlignment="Top"
          Visibility="{x:Bind ViewModel.Item.IsEmpty, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="*"/>
            <!--<ColumnDefinition Width="40*"/>-->

        </Grid.ColumnDefinitions>

        <controls:Details x:Name="details" Grid.Column="0" Margin="6,0,0,0"
                          DetailsContent="{x:Bind ViewModel}"
                          DetailsTemplate="{StaticResource DetailsTemplate}"
                          IsEditMode="{x:Bind ViewModel.IsEditMode, Mode=OneWay}"
                          EditCommand="{x:Bind ViewModel.EditCommand}"
                          DeleteCommand="{x:Bind ViewModel.DeleteCommand}"
                          SaveCommand="{x:Bind ViewModel.SaveCommand}"
                          CancelCommand="{x:Bind ViewModel.CancelCommand}" />

    </Grid>
</UserControl>
