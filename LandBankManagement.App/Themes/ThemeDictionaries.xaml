<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="DefaultBackground" Color="White" />
            <SolidColorBrush x:Key="LightBackground" Color="#424242" />
            <SolidColorBrush x:Key="BorderBrush" Color="LawnGreen" />
            <SolidColorBrush x:Key="ListBackGround" Color="#E0E0E0"></SolidColorBrush>
            <SolidColorBrush x:Key="ListHeaderBackGround" Color="#9E9E9E"/>
            <SolidColorBrush x:Key="SectionBackGround" Color="#9E9E9E"/>
            <SolidColorBrush x:Key="TaskBarBackGround" />
            <SolidColorBrush x:Key="ToolBarButtonForeGround"/>
            <SolidColorBrush x:Key="DetailsBackGround" ></SolidColorBrush>menu
            <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="DefaultBackground" Color="#333" />
            <SolidColorBrush x:Key="LightBackground" Color="#444" />
            <SolidColorBrush x:Key="BorderBrush" Color="#555" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
