                                  HeaderButtonClick="OpenInNewView"
                                  IsButtonVisible="{x:Bind ViewModel.IsMainView}">
                    <views:PartyList ViewModel="{x:Bind ViewModel.PartyList}" />
                </controls:Section>
            </Grid>

        </Grid>-->
    </Grid>
</Page>
